        "@eslint-react/eslint-plugin": "^1.5.28",
        "@iconify/json": "^2.2.242",
        "@iconify/tailwind": "^1.1.3",
        "@types/node": "^20.14.15",
        "@types/react": "^18.3.3",
        "@types/react-dom": "^18.3.0",
        "@vitejs/plugin-react": "^4.3.1",
        "autoprefixer": "^10.4.20",
        "commitizen": "^4.3.0",
        "cz-git": "^1.9.4",
        "electron": "^32.0.1",
        "electron-builder": "^24.13.3",
        "electron-vite": "^2.3.0",
        "eslint": "^8.0.0",

{
	"compilerOptions": {
		"target": "ESNext",
		"jsx": "react-jsx",
		"baseUrl": ".",
		"module": "ESNext",
		"moduleResolution": "node",
		"paths": {
			"@/*": ["./src/*"]
		},
		"strict": true,
		"declaration": true,
		"declarationDir": "dist",
		"emitDeclarationOnly": true,
		"allowSyntheticDefaultImports": true,
		"esModuleInterop": true,
		"isolatedModules": true
	},
	"include": [
		"src/**/*"
	]
}
